{
  "name": "falx",
  "version": "1.1.0",
  "description": "single state management for JS apps",
  "main": "dist/main.js",
  "scripts": {
    "test": "jest",
    "build": "webpack --mode production --display-modules",
    "flow": "flow",
    "build:publish": "npm run flow && npm run test && npm run build && npm publish",
    "dist:add": "git add . -u"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/one-more/falx.git"
  },
  "keywords": [
    "falx",
    "redux",
    "mobx",
    "flux",
    "state",
    "store"
  ],
  "author": "one-more",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/one-more/falx/issues"
  },
  "homepage": "https://github.com/one-more/falx#readme",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-jest": "^22.2.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-flow": "^6.23.0",
    "flow-bin": "^0.65.0",
    "jest": "^22.1.4",
    "pre-commit": "^1.2.2",
    "regenerator-runtime": "^0.11.1",
    "webpack": "^4.0.0-beta.0",
    "webpack-cli": "^2.0.4"
  },
  "dependencies": {
    "lodash": "^4.17.5"
  },
  "babel": {
    "presets": [
      "flow",
      "env"
    ],
    "plugins": [
      "transform-object-rest-spread",
      "transform-class-properties"
    ]
  },
  "jest": {
    "verbose": true,
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "globals": {
      "NODE_ENV": "test"
    },
    "moduleFileExtensions": [
      "js"
    ],
    "transformIgnorePatterns": [
      "/node_modules/(?!ramda)/"
    ],
    "modulePaths": [
      "<rootDir>/src",
      "<rootDir>/node_modules"
    ]
  },
  "pre-commit": [
    "build",
    "dist:add"
  ]
}
